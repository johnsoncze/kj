<form n:name="form">
    <ul class="list-unstyled sortable ui-sortable">
        {foreach $items as $id => $name}
            <li class="move-cursor g-value-line ui-sortable-handle">
                <i class="fa fa-sort"></i> {$name}
                <input n:name="{$id}" value="{$id}">
            </li>
        {/foreach}
    </ul>
    <hr>
    {input submit}
</form>