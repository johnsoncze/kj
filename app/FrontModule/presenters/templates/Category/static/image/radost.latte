{layout 'partials/@layout.latte'}

{block templateContent}

{capture $motto}{_collection.radost.motto}{/capture}
{include header,
image => '/www/upload/category/29/1920_470_radost.jpg',
hidebread => 1,
title => $title,
motto => $motto,
textColorWhite => TRUE}

{capture $text}{_collection.radost.description1}{/capture}

{include newHeaderForCollection}

{include mainTextBlock,
category => $category,
image => '/www/assets/front/user_content/images/collection/radost/radost-300x470.png',
text => $text,
imgClass => 'radost'}

<section class="Background">
    <div class="Collection-detail-items Container">
        <div class="Grid u-pb--90 u-sm-pb--120">

            {capture $text}{_collection.radost.description2}{/capture}
            {include textBlockCell, text => $text}

            {include productBlockCell, products => $control->getRepresentativeProducts(2)}

            {include productBlockCell, products => $control->getRepresentativeProducts(2, 2)}

            {capture $text}{_collection.radost.description3}{/capture}
            {include textBlockCell, text => $text}

            {capture $text}{_collection.radost.description4}{/capture}
            {include textBlockCell, text => $text}

            {include productBlockCell, products => $control->getRepresentativeProducts(2, 4)}

            {include productBlockCell, products => $control->getRepresentativeProducts(2, 6)}

            {capture $text}{_collection.radost.description5}{/capture}
            {include textBlockCell, text => $text}

            {capture $text}{_collection.radost.description6}{/capture}
            {include textBlockCell, text => $text}

            {include productBlockCell, products => $control->getRepresentativeProducts(2, 8)}

            {include ctaBlock, category => $category}

        </div>

    </div>
</section>