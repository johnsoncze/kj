<script>
    $('.hide-me').click(function() {
        var date = new Date();
        date.setDate(date.getDate() + 1);
        date.setHours(0,0,0,0);
        document.cookie = '{\App\FrontModule\Presenters\AbstractPresenter::POPUP_SHOWN|noescape}=1; path=/; expires=' + date.toUTCString();
        jQuery('#popup').hide();
    });
</script>
