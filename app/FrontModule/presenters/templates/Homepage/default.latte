<section class="GetToKnow">
	<div class="Container Grid u-px--0 u-sm-px--20">
		<div class="GetToKnow-item GetToKnow-item--bg1 u-sm-mb--100">
		</div>
		<div class="GetToKnow-item GetToKnow-item--text u-sm-mb--100">
			<div class="GetToKnow-content GetToKnow-content--right">
				<h2 class="GetToKnow-title Heading Heading--section">
					<span>{_homepage.getKnow.story.title}</span><br /> {_homepage.getKnow.story.subTitle}
				</h2>
				<p class="GetToKnow-text u-colorBrownDarkTransparent u-textLineHeight--large">
					{_homepage.getKnow.story.description|noescape}
				</p>
				<a class="Button Button--arrow" href="{plink Page:detail, url => 'o-jk'}">{_homepage.getKnow.story.anchor}</span></a>
			</div>
		</div>
		<div class="GetToKnow-item GetToKnow-item--text">
			<div class="GetToKnow-content GetToKnow-content--left">
				<h2 class="GetToKnow-title Heading Heading--section">
					<span>{_homepage.getKnow.philosophy.title}</span> {_homepage.getKnow.philosophy.design}, {_homepage.getKnow.philosophy.craft} <span>{_homepage.getKnow.philosophy.and|noescape}</span>{_homepage.getKnow.philosophy.materials}
				</h2>
				<p class="GetToKnow-text u-colorBrownDarkTransparent u-textLineHeight--large u-mb--20">
					{_homepage.getKnow.philosophy.description|noescape}
				</p>

				<a class="Button Button--arrow u-mr--20 u-mb--30" href="{plink Page:detail, url => 'design-vyroba'}">{_homepage.getKnow.philosophy.workshopAnchor}</a>
				<a class="Button Button--arrow" href="{plink Page:detail, url => 'zakazkova-vyroba'}">{_homepage.getKnow.philosophy.productionAnchor}</a>

			</div>
		</div>
		<div class="GetToKnow-item GetToKnow-item--bg2">
		</div>
	</div>
</section>

{cache 'hp-news', expire => '30 minutes'}
{control newsLastArticle:featured}

<section class="u-textCenter u-pb--60 u-pt--40 u-sm-pb--60">
    <div class="Container">
        <h2 class="Heading Heading--section u-mb--30 u-sm-mb--60 Blog-Section-Header">
            <span>{_homepage.blog.title}</span> {_homepage.blog.onOurBlog}
        </h2>
        {control newArticles}
        <div class="u-textCenter  u-sm-mb--10">
            <a class="u-textUppercase Button Button--arrow Button--dark-brown" href="{plink Article:list, url => 'blog'}">{_article.featured.allBlog}</a>
        </div>

    </div>
</section>
{/cache}

{define bannerCarousel}
    <div class="BannerCarousel-item">
        <div class="Container">
            <div class="BannerCarousel-content">
                <div n:ifset="$subtitle1" class="BannerCarousel-subTitleUp {$align} {$color} u-mt--10  u-textUppercase">
                    {$subtitle1}
                </div>
                <div class="BannerCarousel-title {$align} {$color} Heading Heading--section u-mb--20 u-sm-mb--30">
                  {$title}
                </div>
                <div class="BannerCarousel-subTitle BannerCarousel-subTitleLower u-colorGold u-textUppercase ">
                  {$subtitle2}
                  <div class="BannerCarousel-subTitle u-colorDarkGreen u-textUppercase ">
                    {$subtitle3}
                  </div>
                </div>
            </div>
        </div>
        <picture>
            <source media="(min-width: 620px)" srcset="{$bannerDesktop}" />
            <source srcset="{$bannerMobile}" />
            <img
                    class="BannerCarousel-image"
                    src="{$bannerDesktop}"
                    {if $lazy}loading="lazy"{/if}
            />
        </picture>
        <div n:ifset="$url" class="BannerCarousel-product">
            <a href="{$url}" class="BannerCarousel-productImage Link--noUnderline">
                <img
                        src="{$bannerForegroundImage}"
                        alt="{$bannerForegroundImageDescription}"
                        {if $lazy}loading="lazy"{/if}
                />
            </a>
            <div class="BannerCarousel-productText u-displayNone u-md-displayBlock">
                <a href="{$url}" class="Link Link--lineBefore">
                    {$bannerForegroundImageDescription}
                    <span class="Link--hover"></span>
                </a>
            </div>
        </div>
    </div>
{/define}
