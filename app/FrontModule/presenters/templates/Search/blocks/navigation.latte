                <a href="{plink Search:default}" class="User-navi-link {$presenter->isLinkCurrent() ? active}">{_search.result.navigation.product.title} ({$result[App\FrontModule\Presenters\SearchPresenter::PRODUCT_RESULT]['count']})</a>
            </div>
        {/if}

        {if $result[App\FrontModule\Presenters\SearchPresenter::CATEGORY_RESULT]['count']}
            <div class="Grid-cell u-size4of12 u-sm-max-size12of12">
