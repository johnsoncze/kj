            </div>
        {/if}

        {if $result[App\FrontModule\Presenters\SearchPresenter::ARTICLE_RESULT]['count']}
            <div class="Grid-cell u-size4of12 u-sm-max-size12of12">
                <a href="{plink Search:article}" class="User-navi-link {$presenter->isLinkCurrent() ? active}">{_search.result.navigation.article.title} ({$result[App\FrontModule\Presenters\SearchPresenter::ARTICLE_RESULT]['count']})</a>
