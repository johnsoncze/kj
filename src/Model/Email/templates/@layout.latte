            <p style="margin: 9px 0;">
                <a href="{$link}" style="color: #C0A772; font-weight: 600;">
                    <font style="font-weight: normal; text-decoration: none; font-family: Arial, Tahoma, Georgia, Times, serif; color: #3d3417; font-style: normal; color: #C0A772; font-weight: 600; text-transform: uppercase; font-weight: bold;">
                        {$name}
                    </font>
                </a>
                <br>
                <br>
                <font style="font-weight: normal; text-decoration: none; font-family: Arial, Tahoma, Georgia, Times, serif; color: #3d3417; font-style: normal; font-size: 11px;">
                    {_product.property.code.title}: {$code}
                </font>
                <br>
                <font style="font-weight: normal; text-decoration: none; font-family: Arial, Tahoma, Georgia, Times, serif; color: #3d3417; font-style: normal; font-size: 11px;">
                    {_product.quantity}: {$quantity}{_product.quantityUnit}
                </font>
                {ifset $text}
                    <br>
                    <font style="font-weight: normal; text-decoration: none; font-family: Arial, Tahoma, Georgia, Times, serif; color: #3d3417; font-style: normal; font-size: 11px;">
                        {$text}
                    </font>
                {/ifset}
                {ifset $productionTimeName}
                    <br>
                    <font style="font-weight: normal; text-decoration: none; font-family: Arial, Tahoma, Georgia, Times, serif; color: #3d3417; font-style: normal; font-size: 11px;">
                        {_product.production.title}: {$productionTimeName}
                    </font>
                {/ifset}
                {if $parameters}
                <br><br>
                    {foreach $parameters as $parameter}
                        <font style="font-weight: normal; text-decoration: none; font-family: Arial, Tahoma, Georgia, Times, serif; color: #3d3417; font-style: normal; font-size: 11px;">
                            {$parameter->getTranslatedName()}: {$parameter->getTranslatedValue()}
                        </font>
                        {if !$iterator->isLast()}<br>{/if}
                    {/foreach}
                {/if}
                {if isset($discountPct) && $discountPct>0}
                    <br><br>
                    <font style="font-weight: normal; text-decoration: none; font-family: Arial, Tahoma, Georgia, Times, serif; color: #3d3417; font-style: normal; font-size: 11px;">
                        Cena před slevou {$discountPct}%: <span style="text-decoration: line-through">{\App\Helpers\Prices::toUserFriendlyFormat($priceBeforeDiscount)}</span> Kč:
                    </font>
                    <br><br>
                    <font style="font-weight: normal; text-decoration: none; font-family: Arial, Tahoma, Georgia, Times, serif; color: #3d3417; font-style: normal; font-size: 11px;">
                        Sleva {\App\Helpers\Prices::toUserFriendlyFormat($discountAmount)} Kč:
                    </font>
                {/if}
